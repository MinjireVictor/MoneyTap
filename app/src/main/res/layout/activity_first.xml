<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:text="play now"
        android:background="@drawable/play_now_bg"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/BankButton"
        android:layout_alignStart="@+id/BankButton" />

    <Button
        android:id="@+id/BankButton"
        android:background="@drawable/bank_button_bg"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="bank" />

    <Button
        android:id="@+id/HowToPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:background="@drawable/how_to_play_bg"
        android:textColor="#ffffff"
        android:text="How to play"
        android:layout_below="@+id/BankButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/DemoButton"
        android:background="@drawable/demo_bg"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="play demo"
        android:layout_below="@+id/HowToPlayButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>


