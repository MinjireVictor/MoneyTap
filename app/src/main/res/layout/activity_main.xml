<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/TvNumber"
        android:clickable="true"
        android:background="@drawable/number_button_bg"
        android:layout_marginLeft="30dp"

        android:layout_alignBaseline="@+id/TvNumber2"
        android:layout_alignBottom="@+id/TvNumber2"
        />

    <TextView
        android:id="@+id/TvNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_button_bg"
        android:gravity="center"
        android:clickable="true"
        android:textSize="30dp"
        android:text="2"
        android:layout_marginRight="30dp"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/TvNumber3"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="@drawable/number_button_bg"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/TvNumber"
        android:layout_alignStart="@+id/TvNumber"
        android:layout_marginBottom="34dp" />

    <TextView
        android:id="@+id/TvNumber4"
        android:background="@drawable/number_button_bg"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30dp"
        android:clickable="true"
        android:layout_alignBaseline="@+id/TvNumber3"
        android:layout_alignBottom="@+id/TvNumber3"
        android:layout_alignLeft="@+id/TvNumber2"
        android:layout_alignStart="@+id/TvNumber2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="score :"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:text="lives :"
        android:layout_alignBaseline="@+id/TvBank"
        android:layout_alignBottom="@+id/TvBank"
        android:layout_toLeftOf="@+id/TvLives"
        android:layout_toStartOf="@+id/TvLives" />

    <TextView
        android:id="@+id/TvBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:id="@+id/TvLives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/TvReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:text="0"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/TvNumber"
        android:text="BANK: "
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Tap screen to start/continue" />

</RelativeLayout>




